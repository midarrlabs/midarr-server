<video
  id="video"
  phx-hook="video"
  poster={@media_poster}
  controlsList="nodownload"
  controls
  autoplay
>
    <source src={@media_stream} type={@mime_type} />

    <%= if @media_has_subtitle do %>
        <track src={@media_subtitle} kind="captions" label="Captions" srclang="en" />
    <% end %>
</video>