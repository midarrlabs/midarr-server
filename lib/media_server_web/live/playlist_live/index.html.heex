<div>
  <.live_component module={MediaServerWeb.Components.NavComponent} id="nav-component" />

  <div class="relative">
    <main>
      <div class="sm:px-8 mt-16 sm:mt-32">
        <div class="mx-auto max-w-7xl lg:px-8">
          <div class="relative px-4 sm:px-8 lg:px-12">
            <div class="mx-auto max-w-2xl lg:max-w-5xl">
              <div class="grid grid-cols-1 gap-y-16 lg:grid-cols-2 lg:grid-rows-[auto_1fr] lg:gap-y-12">
                <div class="lg:order-first lg:row-span-2">
                  <h1 class="text-4xl font-bold tracking-tight text-zinc-100 sm:text-5xl">
                    Playlists
                  </h1>
                  <div class="mt-6 text-base text-zinc-200 line-clamp-2">
                    Add and manage your playlists here.
                  </div>
                  <div class="mt-6 flex gap-6">
                    <div class="flex rounded-full px-3 text-sm font-medium shadow-lg shadow-zinc-800/5 ring-1 ring-zinc-900/5 backdrop-blur bg-zinc-800/90 text-zinc-200 ring-white/10">
                      <button
                      id="new-playlist"
                      phx-click={JS.toggle(to: "#add-playlist") |> JS.focus(to: "#playlists-form_name")}
                      class="flex items-center text-sm py-2 transition hover:text-red-500 hover:text-red-400">
                        <svg
                          fill="none"
                          viewBox="0 0 24 24"
                          stroke-width="1.5"
                          stroke="currentColor"
                          class="w-6 h-6"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M12 4.5v15m7.5-7.5h-15"
                          />
                        </svg>
                        <span class="ml-2">Add</span>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

      <MediaServerWeb.Components.PageSectionComponent.render>

        <%= for item <- @current_user.playlists do %>
          <%= MediaServerWeb.Components.PosterComponent.render(%{
            title: item.name,
            img_src: "",
            link: Routes.playlist_show_path(@socket, :show, item.id)
          }) %>
        <% end %>
      </MediaServerWeb.Components.PageSectionComponent.render>

    <.live_component module={MediaServerWeb.Components.FooterComponent} id="footer-component" />
  </div>
</div>

<div id="add-playlist" class="hidden relative z-30">
  <div class="fixed inset-0 backdrop-blur-sm bg-black/80 opacity-100"></div>

  <div class="fixed inset-0 overflow-y-auto p-4 sm:p-6 md:p-20">
    <div class="mx-auto max-w-xl transform divide-y divide-gray-100 overflow-hidden rounded-xl bg-white shadow-2xl ring-1 ring-black ring-opacity-5 transition-all">
      <div class="relative" phx-click-away={JS.hide(to: "#add-playlist")}>
        <svg
          class="pointer-events-none absolute top-3.5 left-4 h-5 w-5 text-gray-400"
          fill="currentColor"
          viewBox="0 0 20 20"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-6 h-6"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
        </svg>
        <.form :let={f} id="playlists-form" for={%{}} as={:playlists} phx-submit="save">
          <%= text_input(f, :name,
            placeholder: "Add playlist",
            class:
              "h-12 w-full border-0 bg-transparent pl-11 pr-4 text-gray-800 placeholder-gray-400 focus:ring-0 sm:text-sm"
          ) %>

          <input type="hidden" name="playlists[user_id]" value={@current_user.id} />
        </.form>
      </div>
    </div>
  </div>
</div>
